@import './side-bar-menu-item.theme';

/*Component*/
.side-bar-menu-item-component
  position relative
  width 100%

/*Elements in group*/
.side-bar-menu-item-component .primary-item
.side-bar-menu-item-component .secondary-item
  display flex
  align-items center
  font-size SIDE_BAR_MENU_ITEM_FONT_SIZE
/*cursor pointer*/
/*border-left 3px solid transparent*/

.side-bar-menu-item-component .primary-item
  background-color SIDE_BAR_MENU_ITEM_PRIMARY_ORD_BG_COLOR
  color SIDE_BAR_MENU_ITEM_PRIMARY_ORD_TEXT_COLOR
  text-transform uppercase

.side-bar-menu-item-component .secondary-item
  background-color SIDE_BAR_MENU_ITEM_SECONDARY_ORD_BG_COLOR
  color SIDE_BAR_MENU_ITEM_SECONDARY_ORD_TEXT_COLOR

.side-bar-menu-item-component .menu-label
  width "calc(100% - %s)" % ((SIDE_BAR_MENU_ITEM_ICON_WIDTH_VALUE * 2)px)
  opacity 1
  display flex
  align-items center
  transition width 250ms, font-size 0ms 250ms, opacity 150ms

.side-bar-menu-item-component .start-icon
.side-bar-menu-item-component .end-icon
  display flex
  align-items center
  justify-content center

.side-bar-menu-item-component .start-icon
.side-bar-menu-item-component .end-icon
  min-width SIDE_BAR_MENU_ITEM_ICON_WIDTH

/*Individual element*/
/*--Primary item*/
.side-bar-menu-item-component .primary-item
.side-bar-menu-item-component .primary-item .start-icon
.side-bar-menu-item-component .primary-item .menu-label
.side-bar-menu-item-component .primary-item .end-icon
  min-height SIDE_BAR_MENU_ITEM_PRIMARY_HEIGHT

/*--Secondary item*/
.side-bar-menu-item-component .secondary-item
.side-bar-menu-item-component .secondary-item .start-icon
.side-bar-menu-item-component .secondary-item .menu-label
.side-bar-menu-item-component .secondary-item .end-icon
  height 0
  min-height 0
  opacity 0
/*transition min-height 250ms, height 250ms, opacity 250ms*/

/*---End icon as Statistic*/
.side-bar-menu-item-component .end-icon.statistic .count
  background-color SIDE_BAR_MENU_ITEM_SECONDARY_STATISTIC_BG_COLOR
  color SIDE_BAR_MENU_ITEM_SECONDARY_STATISTIC_TEXT_COLOR
  padding 7px 9px 3px 10px
  border-radius 50px
  font-size inherit

.side-bar-menu-item-component .end-icon.statistic
  align-items flex-end
  flex-direction column
  margin-right 8px

/*States*/
/*--Collapsed*/
.side-bar-menu-item-component.collapsed
  width SIDE_BAR_MENU_ITEM_ICON_WIDTH

.side-bar-menu-item-component.collapsed .secondary-item
  display none

.side-bar-menu-item-component.collapsed .menu-label
  min-height 0
  width 0
  height 0
  opacity 0
  font-size 0

.side-bar-menu-item-component.collapsed
.side-bar-menu-item-component.collapsed .menu-label
  transition width 250ms

.side-bar-menu-item-component.collapsed .end-icon
  min-width 0
  min-height 0 !important
  width 0
  height 0
  opacity 0

/*Active*/
.side-bar-menu-item-component.active .primary-item
.side-bar-menu-item-component .secondary-item.active
  font-weight bold
  transition all 250ms !important

.side-bar-menu-item-component.active .primary-item
.side-bar-menu-item-component .primary-item:hover
  /*background-color SIDE_BAR_MENU_ITEM_PRIMARY_ACTIVE_BG_COLOR
  color SIDE_BAR_MENU_ITEM_PRIMARY_ACTIVE_TEXT_COLOR
  border-left-color SIDE_BAR_MENU_ITEM_PRIMARY_ACTIVE_TEXT_COLOR*/

.side-bar-menu-item-component .secondary-item.active
.side-bar-menu-item-component .secondary-item:hover
  background SIDE_BAR_MENU_ITEM_SECONDARY_ACTIVE_BG_COLOR
  color SIDE_BAR_MENU_ITEM_SECONDARY_ACTIVE_TEXT_COLOR

.side-bar-menu-item-component.active .secondary-item
.side-bar-menu-item-component.active .secondary-item .start-icon
.side-bar-menu-item-component.active .secondary-item .menu-label
.side-bar-menu-item-component.active .secondary-item .end-icon
  height auto
  min-height SIDE_BAR_MENU_ITEM_SECONDARY_HEIGHT
  opacity 1
  transition min-height 150ms, height 1000ms 250ms, opacity 500ms

.side-bar-menu-item-component .primary-item:hover
.side-bar-menu-item-component.active .primary-item
  .end-icon.statistic .count
    box-shadow 0 0 0 1px SIDE_BAR_MENU_ITEM_PRIMARY_ACTIVE_TEXT_COLOR
    background-color SIDE_BAR_MENU_ITEM_PRIMARY_ACTIVE_BG_COLOR

.side-bar-menu-item-component .secondary-item:hover
.side-bar-menu-item-component .secondary-item.active
  .end-icon.statistic .count
    box-shadow 0 0 0 1px SIDE_BAR_MENU_ITEM_SECONDARY_ACTIVE_TEXT_COLOR
    background-color SIDE_BAR_MENU_ITEM_SECONDARY_ACTIVE_BG_COLOR

/*Collapse mixed with active*/
.side-bar-menu-item-component.active.collapsed .primary-item
.side-bar-menu-item-component.collapsed .primary-item:hover
  background initial
  color SIDE_BAR_MENU_ITEM_PRIMARY_ORD_TEXT_COLOR

